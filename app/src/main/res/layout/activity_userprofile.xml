<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageViewProfile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/imageuser"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/todo" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:textColor="#BA68C8"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="@tools:sample/full_names" />

    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="131dp"
        android:layout_height="16dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:textColor="#B388FF"
        android:textSize="16sp"
        tools:text="@tools:sample/first_names" />

    <TextView
        android:id="@+id/textViewAge"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:textColor="#2196F3"
        android:textSize="16sp"
        tools:text="@tools:sample/date/day_of_week" />

    <TextView
        android:id="@+id/textViewBio"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:textColor="#E0E0E0"
        android:textSize="16sp"
        tools:text="@tools:sample/lorem" />

    <TextView
        android:id="@+id/textViewLocation"
        android:layout_width="244dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:textColor="#B39DDB"
        android:textSize="16sp"
        tools:text="@tools:sample/cities" />

    <TextView
        android:id="@+id/textViewInterestsTitle"
        android:layout_width="362dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="@tools:sample/full_names" />

    <LinearLayout
        android:id="@+id/interestsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp">

        <!-- Os interesses serão adicionados dinamicamente no código Java -->

    </LinearLayout>

</LinearLayout>
