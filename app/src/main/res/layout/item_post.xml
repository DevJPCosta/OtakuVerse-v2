<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewPostTitle"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:textColor="#7986CB"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="@tools:sample/cities" />

    <TextView
        android:id="@+id/textViewPostContent"
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:textColor="#0277BD"
        android:textSize="16sp"
        tools:text="@tools:sample/cities" />

    <TextView
        android:id="@+id/textViewPostAuthor"
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:textColor="#0277BD"
        android:textSize="14sp"
        android:textStyle="italic"
        tools:text="@tools:sample/first_names" />

    <TextView
        android:id="@+id/textViewPostDate"
        android:layout_width="144dp"
        android:layout_height="29dp"
        android:textColor="#0277BD"
        android:textSize="12sp"
        tools:text="@tools:sample/date/ddmmyy" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonViewPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ver_post" />

        <Button
            android:id="@+id/buttonComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comentar" />

        <TextView
            android:id="@+id/textViewLikes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="@string/_0_curtidas"
            android:textColor="#546E7A"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textViewDislikes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="@string/_0_descurtidas"
            android:textColor="#D81B60"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>
